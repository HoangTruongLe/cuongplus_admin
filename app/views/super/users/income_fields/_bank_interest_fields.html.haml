.nested-fields
  %hr
  %h4.header-title.m-l-10 Bank interest
  .col-12.card-box
    = f.input :question_type, input_html: {value: 'bank_interest'}, as: :hidden
    .form-group.row
      %label{for: 'bank_name', class: 'col-2 col-form-label'}
        Bank Name
        %span.text-danger
      .col-3
        = f.input :bank_name, label: false, input_html: { class: 'form-control' }
      %label{for: 'tax_withheld', class: 'col-2 col-form-label'}
        Tax Withheld
        %span.text-danger
      .col-3
        = f.input :tax_withheld, label: false, input_html: { class: 'form-control' }
    .form-group.row
      %label{for: 'interest_amount', class: 'col-2 col-form-label'}
        Interest Amount
        %span.text-danger
      .col-3
        = f.input :interest_amount, label: false, input_html: { class: 'form-control' }
    = link_to_remove_association "remove", f, class: 'btn btn-danger btn-rounded'

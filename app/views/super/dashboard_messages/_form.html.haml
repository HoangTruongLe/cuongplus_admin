.col-lg-12
  = simple_form_for [:super, @dashboard_message] do |f|
    .form-group.row
      %label{for: 'Title', class: 'col-1 col-form-label'}
        Title
      .col-8
        = f.input :title, label: false, input_html: { class: 'form-control' }
    .form-group.row
      %label{for: 'Body', class: 'col-1 col-form-label'}
        Body
      .col-8
        = f.input :body, label: false, input_html: { class: 'form-control', :rows => 10 }
    .form-group.row
      .col-9
        = f.submit :save, class: 'btn btn-primary pull-right'

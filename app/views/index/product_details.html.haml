.row
  .col-lg-8
    .product_details
      .product_images_wrapper
        - if @product.status == 'available'
          .corner-ribbon.top-right.sticky.blue
            = t(@product.status)
        - if @product.status == 'waiting'
          .corner-ribbon.top-right.sticky.green
            = t(@product.status)
        - if @product.status == 'unavailable'
          .corner-ribbon.top-right.sticky.red
            = t(@product.status)
        #product_images
          - @product.upload_files.each do |image|
            .product_image
              %img{src: image.file_url}
        .horizontal-line
        .col-12
          %h3
            Giá:
            = format_currency(@product.price)
          %h5
            Trả góp từ: 1.000.000đ
            -# = format_currency(@product.instalment)

        .row
          .col-4
            .color_box.text-center.red
              %h6 Đặt hàng ngay - giao tận nơi
              %small Thanh toán tại nhà
          .col-4
            .color_box.text-center.blue
              %h6 Mua trả góp trong 15 phút
              %small Home credit
          .col-4
            .color_box.text-center.green
              %h6 Đặt mua tại cửa hàng
              %small Xem hàng tại cửa hàng
        %br
        %br
        %br
        .row
          .col-12
            = sanitize(@product.product_type.description)
  .col-lg-4
    .product_details
      .col-12
        %h4 Chức năng, cấu hình sản phẩm
        .product_info_legend
          %h5 genneral
        %ul
          %li
            %strong
              Nhà cung cấp
            %span
              = @product.product_type.provider
        .product_info_legend
          %h5 Thông tin chung
        %ul
          %li
            %strong
              Hệ điều hành
            %span
              = @product.product_type.os
          %li
            %strong
              Ngôn Ngữ
            %span
              = @product.product_type.language
        .product_info_legend
          %h5 màn hình
        %ul
          %li
            %strong
              Loại màn hình
            %span
              = @product.product_type.screen_type
          %li
            %strong
              Màu màn hình
            %span
              = @product.product_type.color
          %li
            %strong
              Độ phân giải
            %span
              = @product.product_type.resolution
          %li
            %strong
              Độ rộng màn hình
            %span
              = @product.product_type.screen_size
        .product_info_legend
          %h5 Chụp hình & Quay phim
        %ul
          %li
            %strong
              Camera sau
            %span
              = @product.product_type.back_camera
          %li
            %strong
              Camera trước
            %span
              = @product.product_type.font_camera
          %li
            %strong
              Đèn Flash
            %span
              = @product.product_type.flash
          %li
            %strong
              Quay phim
            %span
              = @product.product_type.video_mode
          %li
            %strong
              Video call
            %span
              = @product.product_type.video_call
        .product_info_legend
          %h5 CPU & Ram
        %ul
          %li
            %strong
              Tốc độ CPU
            %span
              = @product.product_type.cpu
          %li
            %strong
              Ram
            %span
              = @product.product_type.ram
          %li
            %strong
              Chipset
            %span
              = @product.product_type.chipset

        .product_info_legend
          %h5 Bộ Nhớ
        %ul
          %li
            %strong
              Danh bạ
            %span
              = @product.product_type.address_memory
          %li
            %strong
              Hổ trợ thẻ nhớ tối đa
            %span
              = @product.product_type.maximum_memory
          %li
            %strong
              Bộ nhớ trong
            %span
              = @product.product_type.built_in_memory
          %li
            %strong
              Thẻ nhớ ngoài
            %span
              = @product.product_type.extra_memory
        .product_info_legend
          %h5 Kích Thước & Trọng Lượng
        %ul
          %li
            %strong
              Kích thước
            %span
              = @product.product_type.size
          %li
            %strong
              Trọng lượng
            %span
              = @product.product_type.weight

        .product_info_legend
          %h5 Thông tin Pin
        %ul
          %li
            %strong
              Dung lượng
            %span
              = @product.product_type.battery_capacity
        .product_info_legend
          %h5 Kết nối & Giao tiếp
        %ul
          %li
            %strong
              3G
            %span
              = @product.product_type.c3g
          %li
            %strong
              4G
            %span
              = @product.product_type.c4g
          %li
            %strong
              Bluetooth
            %span
              = @product.product_type.bluetooth
          %li
            %strong
              GPRG
            %span
              = @product.product_type.gprs
          %li
            %strong
              GPS
            %span
              = @product.product_type.gps
          %li
            %strong
              Khe cắm sim
            %span
              = @product.product_type.sim_card_port
          %li
            %strong
              Loại sim
            %span
              = @product.product_type.sim_card
          %li
            %strong
              Wifi
            %span
              = @product.product_type.wifi
        .product_info_legend
          %h5 Giải trí
        %ul
          %li
            %strong
              Xem phim
            %span
              = @product.product_type.video_player
          %li
            %strong
              Mp3
            %span
              = @product.product_type.mp3_player
          %li
            %strong
              FM
            %span
              = @product.product_type.fm_radio
          %li
            %strong
              Ghi âm
            %span
              = @product.product_type.recoder

        .col-lg-6

:javascript
  $('#product_images').slick({dots: true});

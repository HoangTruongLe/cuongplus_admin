.left.side-menu
  .slimScrollDiv
    .sidebar-inner.slimscrollleft
      #sidebar-menu
        %ul
          %li.menu-title Main
          %li
            %a{ class:'waves-effect waves-primary', href: super_dashboard_messages_path }
              %i.ti-home
              %span Dashboard
        - if current_user.super_user?
          %ul
            %li.menu-title Super User Only
            - if can? :manage, User
              %li
                %a{ class:'waves-effect waves-primary', href: super_users_path }
                  %i.ti-menu-alt
                  %span Users
            - if can? :manage, ProductType
              %li
                %a{ class:'waves-effect waves-primary', href: product_types_path }
                  %i.ti-menu-alt
                  %span Product Type
            - if can? :manage, Product
              %li
                %a{ class:'waves-effect waves-primary', href: products_path }
                  %i.ti-menu-alt
                  %span Product

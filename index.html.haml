.row
  .col-lg-12.text-center
    %h3.section-heading.text-uppercase Danh sách sản phẩm hiện có tại cửa hàng
  .col-lg-12.text-center
    = search_form_for @q, remote: true, method: :get, url: index_path do |f|
      .form-group.area-keyword
        .input-group.div-flex
          = f.search_field :name_or_price_cont_any, placeholder: 'Nhập sản phẩm bạn muốn tìm, vd: iphone x ...', class: 'form-control'
          .text-right
            = f.submit 'Tìm kiếm', class: 'btn btn-primary pull-right ml-1'
#product_list
  = render 'product_list'
.row
  .col-12
    .box-footer.clearfix
      %ul.pagination.pagination-sm.no-margin.pull-right#paginator
        = paginate @products, remote: true
